    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "variable.other.global"  // Adjust this scope as needed
                ],
                "settings": {
                    "foreground": "#eb9b5abe"  // Change this to your desired color
                }
            },
            {
                "scope": [
                    "entity.name.type",      // Additional scope for types
                    "variable.other.type",  // This scope usually applies to typedefs
                    "support.types"
                ],
                "settings": {
                    "foreground": "#0cbc1ea5"  // Change this to your desired color
                }
            },
            {
                "scope": [
                    "variable.other.enummember.c"
                ],
                "settings": {
                    "foreground": "#68f076"  // Change this to your desired color
                }
            },
            {
                "scope": [
                    "comment",                  // For single-line comments
                    "comment.block.c",            // For block comments
                    "comment.line.double-slash", // For specific line comments
                    "comment.line.number-sign"
                ],
                "settings": {
                    "foreground": "#3e513e"     // Change this to your desired color
                }
            },
            {
                "scope": [
                    "meta.preprocessor.c",
                    "keyword.control.directive.conditional.c",
                    "keyword.control.directive.include.c",
                    "entity.name.function.preprocessor.c",
                    "keyword.operator.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#b12424c3"       // Change this to your desired color
                }
            },
            {
                "scope": [
                    "keyword.control.directive.conditional.c",
                    "keyword.control.directive.define.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#b1242470"       // Change this to your desired color
                }
            },
            {
                "scope": [
                    "entity.name.function.preprocessor.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#f64c4cd0"       // Change this to your desired color
                }
            },
            {
                "scope": [
                    "variable.other.local.c",
                    "variable.other.property.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#308181ae"       // Change this to your desired color
                }
            },
            {
                "scope": [
                    "string.quoted.double.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#afc22196",       // Change this to your desired color
                    
                    
                }
            },
            {
                "scope": [
                    "entity.name.function.c"
                    ],  // Scope for preprocessor directives
                "settings": {
                    "foreground": "#9480f196",       // Change this to your desired color
                    
                    
                }
            }                       
        ]
    },
